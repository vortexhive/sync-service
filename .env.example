# Sync Service Configuration Example
# Copy this file to .env and fill in the actual values

# Source Database (myusta_backend - where users are created)
SOURCE_DB_HOST=localhost
SOURCE_DB_PORT=5432
SOURCE_DB_NAME=myusta_backend_02
SOURCE_DB_USER=your_db_user
SOURCE_DB_PASSWORD=your_source_db_password
SOURCE_DB_POOL_SIZE=10

# Chat Database (chat_app_02 - where users need to be synced)
CHAT_DB_HOST=localhost
CHAT_DB_PORT=5432
CHAT_DB_NAME=chat_app_02
CHAT_DB_USER=your_db_user
CHAT_DB_PASSWORD=your_chat_db_password
CHAT_DB_POOL_SIZE=10

# Sync Configuration
SYNC_INTERVAL_MINUTES=1
SYNC_WINDOW_MULTIPLIER=3

# Retry Configuration
MAX_RETRIES=3
RETRY_INITIAL_DELAY=1000
RETRY_MAX_DELAY=30000
RETRY_BACKOFF_MULTIPLIER=2
MAX_RECONNECT_ATTEMPTS=10

# HTTP Server for health checks
HTTP_PORT=9000
